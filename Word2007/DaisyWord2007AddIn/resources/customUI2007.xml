<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="OnLoad">
    <ribbon>
		<officeMenu>
			<menu id="DaisyMenu" label="Save As DAIS&amp;Y" insertAfterMso="FileSaveAsMenu" itemSize="large" getImage="iconSelector">
				<button id="DtbookSingle"
						label="DAISY &amp;XML"
						onAction="SaveAsDTBookXML"
						getEnabled="ribbonButtonsEnabled"
						getImage="iconSelector"
						screentip="Export the document as DAISY XML (dtbook dtd)"
						description="Export the document as DAISY XML (dtbook dtd)"/>
				<button id="DaisySingle"
						label="&amp;DAISY3"
						onAction="SaveAsDAISY3"
						getEnabled="ribbonButtonsEnabled"
						getImage="iconSelector"
						description="DAISY3 book with text and/or audio"
						screentip="DAISY3 book with text and/or audio"/>
				<button id="EpubSingle"
						label="&amp;EPUB3 (experimental)"
						onAction="SaveAsEPUB3"
						getEnabled="ribbonButtonsEnabled"
						getImage="iconSelector"
						description="EPUB3 book"
						screentip="EPUB3 book"/>
			</menu>
		</officeMenu>
        <tabs>
            <tab id="CustomTab" label="Accessibility">
                <group id="SampleGroup" label="Save As DAISY">
                    <menu id="DaisyMnu" label="S&amp;aveAsDAISY" size="large" getImage="iconSelector" >
						<button id="DtbookTabSingle"
						        label="DAISY &amp;XML"
						        onAction="SaveAsDTBookXML"
						        getEnabled="ribbonButtonsEnabled"
						        getImage="iconSelector"
						        screentip="Export the document as DAISY XML (dtbook dtd)"
						        description="Export the document as DAISY XML (dtbook dtd)"/>
						<button id="DaisyTabSingle"
						        label="&amp;DAISY3"
						        onAction="SaveAsDAISY3"
						        getEnabled="ribbonButtonsEnabled"
						        getImage="iconSelector"
						        description="DAISY3 book with text and/or audio"
						        screentip="DAISY3 book with text and/or audio"/>
						<button id="EpubTabSingle"
						        label="&amp;EPUB3 (from Single docx, experimental)"
						        onAction="SaveAsEPUB3"
						        getEnabled="ribbonButtonsEnabled"
						        getImage="iconSelector"
								description="EPUB3 book"
						        screentip="EPUB3 book"/>
                    </menu>
                </group >

                <group id="SampleGroup2" label="Abbreviations">
                    <button id="Button3"  label="Mark As A&amp;bbreviation" size="large" onAction="MarkAsAbbreviationUI" getImage="iconSelector"/>
                    <button id="Button4" label="Ma&amp;nage Abbreviation" size="large" onAction="ManageAbbreviation" getImage="iconSelector"/>
                </group>
                <group id="SampleGroup3" label="Acronyms">
                    <button id="Button5"  label="Mark As A&amp;cronym" size="large" onAction="MarkAsAcronymUI" getImage="iconSelector"/>
                    <button id="Button6" label="Mana&amp;ge Acronym" size="large" onAction="ManageAcronym" getImage="iconSelector"/>
                </group >
                <group id="SampleGroup4" label="Validate">
                    <toggleButton id="toggleValidate" label="&amp;Accessibility check" screentip="&amp;Run the accessibility checker on the current document. For Word 2007, a custom word validation process is applied. " description="&amp;Run the accessiblity checker on the current document. For Word 2007, a custom word validation process is applied. " size="large" onAction="Validate" getPressed="buttonValidatePressed" getEnabled="getValidateEnabled" getImage="iconSelector"/>
                </group>
                <group id="SampleGroup5" label ="DAISY Styles">
                    <button id="Button7" label="&amp;Import" size="large" onAction="Update_Styles" getEnabled="getEnabled" getImage="iconSelector"/>
                </group>
                <group id="SampleGroup9" label="AddFootnote">
                    <button id="Button11" label="Add&amp;Footnote" size="large" onAction="AddFotenote" getImage="iconSelector"/>
                </group >
                <group id="SampleGroup10" label ="Language">
                    <button id="Button12" label="&amp;Language" size="large" onAction="GetlanguageSettings" getImage="iconSelector"/>
                </group>
                <group id="SampleGroup7" label ="DAISY Settings">
                    <button id="Button10" label="&amp;Settings" size="large" onAction="GetDaisySettings" getImage="iconSelector"/>
                </group>
                <group id="SampleGroup6" label="Help">
                    <button id="Button8"  label="&amp;Version Details" size="large" onAction="AboutUI" getImage="iconSelector"/>
                    <menu id="DaisyHelpMnu" label="&amp;Documentation" size="large" getImage="iconSelector" >
                        <button id="Button9"  label="Instruction Manual" onAction="ShowWordManual" />
                        <!--<button id="Button13"  label="DAISY Manual in DTBook Format" onAction="ShowDtBookManual" />-->
                        <button id="Button13"  label="Authoring guidelines" onAction="ShowAuthoringGuidelines" />
                    </menu>
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>